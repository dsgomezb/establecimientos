<div class="container p-4">
    <div class="row">
        <div class="col-md-12 text-center">
            <h2 class="text-primary">{{lang.users.create_user}}</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form id="form_save">
                        <div class="row">
                            <div class="form-group col-md-6">
                                <b><label for="">{{lang.users.document}}{{lang.required}}</label></b>
                                <input type="text" name="document" id="document" class="form-control" maxlength="30" placeholder="{{lang.users.document}}" autofocus required>
                            </div>
                            <div class="form-group col-md-6">
                                <b><label for="">{{lang.users.name}}{{lang.required}}</label></b>
                                <input type="text" name="names" id="names" class="form-control" maxlength="250" placeholder="{{lang.users.name}}" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <b><label for="">{{lang.users.email}}{{lang.required}}</label></b>
                                <input type="email" name="email" id="email" class="form-control" maxlength="250" placeholder="{{lang.users.email}}" required>
                            </div>
                            <div class="form-group col-md-6">
                                <b><label for="">{{lang.users.phone}}{{lang.required}}</label></b>
                                <input type="text" name="phone" id="phone" class="form-control" maxlength="250" placeholder="{{lang.users.phone}}" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <b><label for="">{{lang.users.username}}{{lang.required}}</label></b>
                                <input type="text" name="username" id="username" class="form-control" maxlength="100" placeholder="{{lang.users.username}}" required>
                            </div>
                            <div class="form-group col-md-6">
                                <b><label for="">{{lang.users.password}}{{lang.required}}</label></b>
                                <input type="password" name="password" id="password" class="form-control" maxlength="80" placeholder="{{lang.users.password}}" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <b><label for="">{{lang.users.profile_select}}{{lang.required}}</label></b>
                                <select class="form-control" name="profile" id="profile" style="cursor: pointer;">
                                    <option value="0">Seleccione</option>
                                    {{#each profile}}
                                        {{#if_eq status_profile "1" }}
                                            <option value="{{id_profile}}">{{name_profile}}</option>
                                        {{/if_eq }} 
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-12 text-center">
                                <button type="submit" class="btn btn-primary" >{{lang.button.save}}</button>
                            </div>
                        </div> 
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>
