<!-- Modal crear nueva categoria de producto-->
<div class="modal inmodal" id="modal_change_status_order" role="dialog" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-m" role="document">
        <div class="modal-content">
            <!-- Encabezado del modal -->
            <div class="modal-header text-center bg-light">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <!-- /Encabezado del modal -->
            <!-- Cuerpo del modal -->
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <h2 class="text-success">{{lang.orders.change_order_status}}</h2>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 mx-auto">
                            <form id="form_save_order_status">
                                <div class="row">
                                    <div class="form-group col-md-12">
                                        <b><label for="">{{lang.orders.status_order}}{{lang.required}}</label></b>
                                        <select name="status_order" id="status_order" class="form-control">
                                        </select>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-12 text-center">
                                        <input type="hidden" id="id_master_order_modal">
                                        <button type="submit" class="btn btn-success" >{{lang.button.save}}</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /Cuerpo del modal -->
            <!-- Pie del modal -->
            <div class="modal-footer text-center">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">{{lang.button.close}}</button>
            </div>
            <!-- /Pie del modal -->
        </div>
    </div>
</div>
<!-- /Modal crear nueva categoria de producto-->