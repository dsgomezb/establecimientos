<div class="container p-4">
    <div class="row">
        <div class="col-md-12 text-center">
            <h2 class="text-success">{{lang.users.update_user}}</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form id="form_update">
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="">{{lang.users.document}}{{lang.required}}</label>
                                <input value="{{user.document}}" type="text" name="document" id="document" class="form-control" placeholder="{{lang.users.document}}" autofocus required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="">{{lang.users.name}}{{lang.required}}</label>
                                <input value="{{user.names}}" type="text" name="names" id="names" class="form-control" placeholder="{{lang.users.name}}" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="">{{lang.users.email}}{{lang.required}}</label>
                                <input value="{{user.email}}" type="email" name="email" id="email" class="form-control" placeholder="{{lang.users.email}}" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="">{{lang.users.phone}}{{lang.required}}</label>
                                <input value="{{user.phone}}" type="text" name="phone" id="phone" class="form-control" placeholder="{{lang.users.phone}}" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="">{{lang.users.username}}{{lang.required}}</label>
                                <input value="{{user.username}}" type="text" name="username" id="username" class="form-control" placeholder="{{lang.users.username}}" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="">{{lang.users.password}}{{lang.required}}</label>
                                <input type="password" name="password" id="password" class="form-control" placeholder="{{lang.users.password}}">
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="">{{lang.users.profile}}</label>
                                <input value="{{user.name_profile}}" type="text" class="form-control" disabled>
                            </div>
                        </div>
                        <div class="row"></div>  
                            <div class="form-group col-md-12 text-center">
                                <input value="{{user.id_user}}" type="hidden" name="user_id" id="user_id" >
                                <button type="submit" class="btn btn-success" >{{lang.button.update}}</button>
                            </div>
                        </div> 
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>
