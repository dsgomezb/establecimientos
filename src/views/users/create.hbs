<div class="container p-4">
    <div class="row">
        <div class="col-md-12 text-center">
            <h2 class="text-primary">{{lang.users.create_user}}</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="signup" method="POST">
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="">{{lang.users.document}}{{lang.required}}</label>
                                <input type="text" name="document" id="document" class="form-control" placeholder="{{lang.users.document}}" autofocus required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="">{{lang.users.name}}{{lang.required}}</label>
                                <input type="text" name="names" id="names" class="form-control" placeholder="{{lang.users.name}}" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="">{{lang.users.email}}{{lang.required}}</label>
                                <input type="email" name="email" id="email" class="form-control" placeholder="{{lang.users.email}}" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="">{{lang.users.phone}}{{lang.required}}</label>
                                <input type="text" name="phone" id="phone" class="form-control" placeholder="{{lang.users.phone}}" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="">{{lang.users.username}}{{lang.required}}</label>
                                <input type="text" name="username" id="username" class="form-control" placeholder="{{lang.users.username}}" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="">{{lang.users.password}}{{lang.required}}</label>
                                <input type="password" name="password" id="password" class="form-control" placeholder="{{lang.users.password}}" required>
                            </div>
                        </div>
                        <div class="row"></div>  
                            <div class="form-group col-md-12 text-center">
                                <button class="btn btn-primary">Guardar</button>
                            </div>
                        </div> 
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>
