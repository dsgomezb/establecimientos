
<div class="container p-4">
    <div class="row">    
        <div class="col-md-3">
            <a href="/users/create" class="btn btn-success">{{lang.users.new}}</a>
            {{user.id}}
        </div>
        <div class="col-md-9">
        </div>     
    </div>    
    <div class="row">
        <div class="col-md-12 col-xs-12">
            <table id="users_table" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>{{lang.users.N}}</th>
                        <th>{{lang.users.document}}</th>
                        <th>{{lang.users.name}}</th>
                        <th>{{lang.users.email}}</th>
                        <th>{{lang.users.phone}}</th>
                        <th class="text-center">{{lang.detail.action}}</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                    <tr>
                        <td></td>
                        <td>{{document}}</td>
                        <td>{{names}}</td>
                        <td>{{email}}</td>
                        <td>{{phone}}</td>
                        <td class="text-center">
                            <a href="#" class="detail" data-id="{{id}}"><i class="fa fa-eye fa-lg" title="{{../lang.detail.view}}"></i></a>
                            <a href="/users/edit/{{id}}"><i class="fa fa-edit fa-lg" title="{{../lang.detail.edit}}"></i></a>                       
                            <a href="#" class="delete" data-id="{{id}}"><i class="fa fa-trash fa-lg" title="{{../lang.detail.delete}}"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>    
            </table>
        </div>
    </div>
    <!-- Button trigger modal -->

</div>
</div>
    {{> modal/modal_detail_user }}
</div>