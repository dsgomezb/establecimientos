
<div class="container p-4">
    <div class="row">    
        <div class="col-md-12" style="text-align: center;">
            <h2 class="text-primary">{{lang.establecimientos.management_establecimientos}}</h2>         
        </div>    
    </div>
    <div class="row">    
        <div class="col-md-3">
            <a href="/establecimientos/create" class="btn btn-success">{{lang.establecimientos.new}}</a>          
        </div>
        <div class="col-md-9">
        </div>     
    </div>    
    <div class="row">
        <div class="col-md-12 col-xs-12">
            <table id="establecimientos_table" class="table table-striped table-bordered display nowrap" width="100%">
                <thead>
                    <tr>
                        <th>{{lang.establecimientos.N}}</th>
                        <th>{{lang.establecimientos.code}}</th>
                        <th>{{lang.establecimientos.name}}</th>
                        <th>{{lang.establecimientos.city}}</th>
                        <th>{{lang.establecimientos.address}}</th>
                        <th>{{lang.establecimientos.admin}}</th>
                        <th>{{lang.detail.status}}</th>
                        <th class="text-center">{{lang.detail.action}}</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each establecimientos}}
                    <tr>
                        <td></td>
                        <td>{{id_establecimiento}}</td>
                        <td>{{name_establecimiento}}</td>
                        <td>{{nombre_muni}}</td>
                        <td>{{direccion_establecimiento}}</td>
                        <td>{{names}}</td>
                        <td>  
                            {{#if_eq status_establecimiento "1" }}
                                <span class="badge badge-success">{{../lang.detail.act}}</span>
                            {{else}}
                                <span class="badge badge-danger">{{../lang.detail.inact}}</span>
                            {{/if_eq }} 
                        </td>
                        <td class="text-center">
                            {{#if_eq status_establecimiento "1" }}   
                                <a href="#" class="detail btn btn-primary btn-sm" data-id="{{id_establecimiento}}"><i class="fa fa-align-justify fa-lg" title="{{../lang.detail.detail}}"></i></a>
                                <a href="/establecimientos/edit/{{id_establecimiento}}" class="btn btn-secondary btn-sm"><i class="fa fa-edit fa-lg" title="{{../lang.detail.edit}}"></i></a>
                                <a href="#" class="inactive btn btn-danger btn-sm" data-id="{{id_establecimiento}}"><i class="fa fa-ban fa-lg" title="{{../lang.detail.inactive}}"></i></a>
                            {{else}}
                                <a href="#" class="active btn btn-success btn-sm" data-id="{{id_establecimiento}}"><i class="fa fa-check fa-lg" title="{{../lang.detail.active}}"></i></a>
                            {{/if_eq }}    
                        </td>
                    </tr>
                    {{/each}}
                </tbody>    
            </table>
        </div>
    </div>
    <!-- Button trigger modal -->

</div>
</div>
    {{> modal/modal_detail_establecimientos }}
</div>