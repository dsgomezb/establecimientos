<div class="container p-4">
    <div class="row">
        <div class="col-md-12 text-center">
            <h2 class="text-primary">{{lang.products.create_product}}</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form enctype="multipart/form-data" id="form_save_product" action="/products/register_product" method="POST">
                        <div class="row">
                            <div class="form-group col-md-6">
                                <b><label for="">{{lang.products.name}}{{lang.required}}</label></b>
                                <input type="text" name="name_product" id="name_product" class="form-control" maxlength="500" placeholder="{{lang.products.name}}" required>
                            </div>
                            <div class="form-group col-md-6">
                                <b><label for="">{{lang.products.establecimiento}}{{lang.required}}</label></b>
                                <select class="form-control" name="id_establecimiento" id="id_establecimiento" style="cursor: pointer;">
                                    <option value="0">Seleccione</option>
                                    {{#each establecimientos}}
                                        <option value="{{id_establecimiento}}">{{id_establecimiento}} - {{name_establecimiento}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-6">
                                <b><label for="">{{lang.products.description}}</label></b>
                                <textarea name="description_product" id="description_product" class="form-control" maxlength="500" placeholder="{{lang.products.description}}" ></textarea>
                            </div>
                            <div class="form-group col-md-6">
                                <b><label for="">{{lang.products.internal_code}}{{lang.required}}</label></b>
                                <input type="text" name="internal_code_product" id="internal_code_product" class="form-control" maxlength="50" placeholder="{{lang.products.internal_code}}" required>
                            </div>
                        </div>


                        <div class="row">
                            <div class="form-group col-md-6">
                                <b><label for="">{{lang.products.category_product}}{{lang.required}}</label></b>
                                <select class="form-control" name="id_category_product" id="id_category_product" style="cursor: pointer;">
                                    <option value="0">Seleccione</option>
                                    {{#each category_product}}
                                        <option value="{{id_category_product}}">{{name_category_product}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="form-group col-md-6">
                                <b><label for="">{{lang.products.presentation_product}}{{lang.required}}</label></b>
                                <select class="form-control" name="id_presentation_product" id="id_presentation_product" style="cursor: pointer;">
                                    <option value="0">Seleccione</option>
                                    {{#each presentation_product}}
                                        <option value="{{id_presentation_product}}">{{name_presentation_product}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div> 
                        <div class="row">
                           <div class="form-group col-md-4">
                                <b><label for="">{{lang.products.unitary_value_product}}{{lang.required}}</label></b>
                                <input type="number" name="unitary_value_product" id="unitary_value_product" class="form-control" placeholder="{{lang.products.unitary_value_product}}" required step="any">
                            </div>
                            <div class="form-group col-md-4">
                                <b><label for="">{{lang.products.iva}}</label></b>
                                <input type="number" name="iva_product" id="iva_product" class="form-control" placeholder="{{lang.products.iva}}" step="any">
                            </div>
                            <div class="form-group col-md-4">
                                <b><label for="">{{lang.products.product_iva}}</label></b>
                                <input type="text" name="value_iva_product" id="value_iva_product" class="form-control" placeholder="{{lang.products.product_iva}}" disabled step="any">
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <b><label for="">{{lang.products.status}}{{lang.required}}</label></b>
                                <select name="status_product" id="status_product" class="form-control">
                                    <option value="3">Disponible</option>
                                    <option value="4">No disponible</option>
                                </select>
                            </div>
                            <div class="form-group col-md-6">
                                <b><label for="">{{lang.products.image}}{{lang.required}}</label></b>
                                <input type="file" name="image_product" id="image_product" accept="image/jpg, image/png, image/jpeg">
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-12 text-center">
                                <button type="submit" class="btn btn-primary" >{{lang.button.save}}</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>